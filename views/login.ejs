<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login / Sign Up</title>
    <script src="/script.js"></script>
</head>
<body>
    <div>
        <h1 id="formTitle">Login</h1>
        <!-- The form will switch between login (GET request) and sign-up (POST request) -->
        <form id="userForm" action="/login" method="GET">
            <div class="signup-only" style="display: none;">
                <label for="firstNameInput">First Name</label>
                <input type="text" id="firstNameInput" name="firstName" required>
            </div>
            <div class="signup-only" style="display: none;">
                <label for="lastNameInput">Last Name</label>
                <input type="text" id="lastNameInput" name="lastName" required>
            </div>
            <div>
                <label for="emailInput">Email Address</label>
                <input type="email" id="emailInput" name="email" required>
            </div>
            <div>
                <label for="passInput">Password</label>
                <input type="password" id="passInput" name="password" required>
            </div>
            <button type="submit" id="submitButton">Login</button>
        </form>
        <p id="toggleText">Don't have an account? <a href="#" onclick="toggleForm('signup')">Register Here</a></p>
    </div>
</body>
</html>
