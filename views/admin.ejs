<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
</head>
<body>
    <h1 style="text-align: center;">User Records</h1>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <% if (users.length > 0) { %>
        <% users.forEach(row => { %>
          <tr>
            <input value="row.email">
            <td><%= row.email %></td>
            <td><%= row.password %></td>
            <td><%= row.first_name %></td>
            <td><%= row.last_name %></td>
            <td><%= row.phone %></td>
            <td>
              <form action="/users/<%= row.email %>" method="GET" style="display:inline;">
                <button type="submit">View</button>
              </form>
              <form action="/editUser/<%= row.email %>" method="GET" style="display:inline;">
                <button type="submit">Edit</button>
              </form>
              <form action="/deleteUser/<%= row.email %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7">No data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <form action="/addReview" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
    <button type="submit">Add</button>
  </form>
  <h1 style="text-align: center;">Review Records</h1>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Date</th>
        <th>Comment</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% if (reviews.length > 0) { %>
        <% reviews.forEach(row => { %>
          <tr>
            <input type="hidden" value="row.reviewID">
            <td><%= row.Email %></td>
            <td><%= row.Date %></td>
            <td><%= row.Comment %></td>
            <td><%= row.Rating %></td>
            <td>
              <form action="/users/<%= row.reviewID %>" method="GET" style="display:inline;">
                <button type="submit">View</button>
              </form>
              <form action="/editUsers/<%= row.reviewID %>" method="GET" style="display:inline;">
                <button type="submit">Edit</button>
              </form>
              <form action="/deleteUser/<%= row.reviewID %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7">No data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <form action="/addUser" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
    <button type="submit">Add</button>
  </form>
</body>
</html>