<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link href="styles.css" rel="stylesheet" type="text/css">
</head>
<body>
<!-- Navigation Bar -->
  <nav class="navbar">
        
    <ul class="navbar-links">
        <li><a href="/">Home</a></li>
        <li><a href="/admin">Admin Users</a></li>
    </ul>
    <div class="navbar-brand">Haley Esthetics</div>
  </nav>

<!-- Admin Page Title -->
  <h1 style="text-align: center">Administration Page</h1>
<!-- Table Showing User Records -->
  <h2 style="text-align: left;">Review Records</h2>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Review Date</th>
        <th>Rating</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
      <!-- Takes records from database & displays each on the page -->
      <% if (reviews.length > 0) { %>
        <% reviews.forEach(row => { %>
          <tr>
            <td><%= row.email %></td>
            <td><%= row.review_date %></td>
            <td><%= row.rating %></td>
            <td><%= row.comment %></td>
            <td>
              <!-- Buttons to View, Edit, & Delete individual records -->
              <form action="/users/<%= row.id %>" method="GET" style="display:inline;">
                <button type="submit">View</button>
              </form>
              <form action="/editUser/<%= row.id %>" method="GET" style="display:inline;">
                <button type="submit">Edit</button>
              </form>
              <form action="/deleteUser/<%= row.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7">No data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>